---
import { MapPin, Clock, Zap } from "lucide-astro";
---
<section id="inicio" class="bg-gradient-to-br from-blue-50 to-blue-100 py-20">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Texto principal -->
        <div>
          <div class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <Zap class="w-4 h-4 text-white-500"/> ATENCIÓN RÁPIDA
          </div>
          <h2 class="text-5xl font-bold text-gray-900 mb-6 leading-tight">
            Servicios de mecánica y pintura automotriz
          </h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Más de 15 años ofreciendo servicios de mecánica y pintura profesional. 
            Calidad, métodos profesionales y garantía en todas nuestras reparaciones.
          </p>

          <!-- Botones de acción -->
          <div class="flex flex-wrap gap-4">
            <a href="#contacto" class="bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition flex items-center gap-2 shadow-lg">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Contactar por WhatsApp
            </a>
            <a href="#precios" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-50 transition border-2 border-blue-600 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Pedir presupuesto
            </a>
          </div>
        </div>

        <!-- Tarjeta de ubicación -->
        <div class="bg-white rounded-2xl shadow-2xl p-8">
          <div class="flex items-start gap-3 mb-6">
            <MapPin class="w-6 h-6 text-red-500" />
            <div>
              <h3 class="font-bold text-xl text-gray-900 mb-2">Av. Principal 123, Local 5</h3>
              <p class="text-gray-600">aqui mismo - Colombia</p>
            </div>
          </div>

          <a href="https://maps.google.com" target="_blank" class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Ver en Google Maps
          </a>

          <div class="mt-6 pt-6 border-t border-gray-200 ">
            <h4 class="font-semibold text-gray-900 mb-3">Horario de atención:</h4>
            <div class="space-y-2 text-gray-600 flex flex-col">
              <p class="inline-flex items-center gap-2 ">
                <Clock class="w-4 h-4 text-blue-500" /> Lun - Vie: 8:00 AM - 6:00 PM</p>
                
              <p class="inline-flex items-center gap-2 "> <Clock class="w-4 h-4 text-blue-500" /> Sábados: 9:00 AM - 2:00 PM</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>